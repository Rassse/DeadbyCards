<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DeadByCards"
        tools:targetApi="31">
        <activity
            android:name=".SurvivorViewHolder"
            android:exported="false" />
        <activity
            android:name=".AddSurvivor"
            android:exported="false" />
        <activity
            android:name=".Intro"
            android:exported="true"
            android:theme="@style/Theme.DeadByCards.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadingScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.DeadByCards" />
        <activity android:name=".MainPage" />
        <activity android:name=".ChooseSide" />
        <activity android:name=".SurvivorLoadout" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>